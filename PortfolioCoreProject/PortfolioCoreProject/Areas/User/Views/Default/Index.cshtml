@model EntityLayer.Concrete.AppUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_UserLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profile Page</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" id="exampleInputName1" placeholder="Surname" value="@Model.Surname">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Username</label>
                    <input asp-for="UserName" type="text" class="form-control" id="exampleInputName1" placeholder="Username" value="@Model.UserName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Password</label>
                    <input type="password" readonly class="form-control" id="exampleInputName1" placeholder="Password" value="@Model.UserName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail3" placeholder="Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Phone</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="exampleInputEmail3" placeholder="Phone" value="@Model.PhoneNumber">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Image Url</label>
                    <input asp-for="ImageUrl" type="text" class="form-control" id="exampleInputEmail3" placeholder="Image Url" value="@Model.ImageUrl">
                </div>
                <button class="btn btn-primary mr-2">Submit</button>
            </form>
        </div>
    </div>
</div>