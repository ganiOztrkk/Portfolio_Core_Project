@model Experience
@{
    Layout = "_AdminLayout";
}

<div class="container">
    <form method="post" asp-controller="Experience" asp-action="UpdateExperience">
        <input type="hidden" asp-for="ExperienceId" />
        <input type="hidden" asp-for="ExperienceStatus" />
        <label style="color: white">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
        <br />
        <label>Date</label>
        <input type="text" class="form-control" asp-for="Date" required />
        <br />
        <label>Description</label>
        <input type="text" class="form-control" asp-for="Description" required />
        <br />
        <label>Image Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" required />
        <br />
        <button class="btn btn-success">Update Experience</button>
        <br />
    </form>
</div>