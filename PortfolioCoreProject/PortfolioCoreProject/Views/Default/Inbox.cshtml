@model IEnumerable<Message>
@{
    Layout = "_AdminLayout";
}

<div class="card-header border-0">
    <h3>Contact Messages</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr class="text-center">
                <th scope="col" class="sort" data-sort="title">#</th>
                <th scope="col" class="sort" data-sort="value">Sender</th>
                <th scope="col" class="sort" data-sort="completion">Date</th>
                <th scope="col" class="sort" data-sort="completion">Delete</th>
                <th scope="col" class="sort" data-sort="completion">Archive</th>
                <th scope="col" class="sort" data-sort="completion">Go Message</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.MessageId</td>
                    <td>@item.Name</td>
                    <td>@item.Date</td>
                    <td><a href="/Default/DeleteMessage/@item.MessageId" class="btn btn-sm btn-danger">Delete</a></td>
                    <td><a href="/Default/ArchiveMessage/@item.MessageId" class="btn btn-sm btn-info">Archive</a></td>
                    @if (item.ReadStatus == true)
                    {
                        <td><a href="/Default/MessageDetails/@item.MessageId" class="btn btn-sm btn-danger">Open</a></td>
                    }
                    else
                    {
                        <td><a href="/Default/MessageDetails/@item.MessageId" class="btn btn-sm btn-success">Opened</a></td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>